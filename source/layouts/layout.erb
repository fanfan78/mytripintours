<!doctype html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- For Bootstrap responsiveness -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    
    <% if (I18n.locale == :en) %>
    <link rel="alternate" hreflang="fr" href="<%= current_page.url.gsub("en", "fr") %>" />
    <% else %>
    <link rel="alternate" hreflang="en" href="<%= current_page.url.gsub("fr", "en") %>" />
    <% end %>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">

    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
          <% link_to "index.html", class: "navbar-brand list-inline no-padding hidden-xs" do %>         
            <ul class="brand-padding no-margin">
              <li class="logo">MY TRIP IN TOURS</li>
              <li><i class="fa fa-fort-awesome castle"></i></li>
            </ul>
          <% end %>

          <% link_to "index.html", class: "navbar-brand list-inline no-padding hidden-sm hidden-md hidden-lg" do %>
            <ul class="brand-padding2 no-margin">
              <li class="logo2">MY TRIP IN TOURS</li>
              <li><i class="fa fa-fort-awesome castle2"></i></li>
            </ul>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          
          <ul class="nav navbar-nav navbar-right">            

            <li><a href="index.html"><%= t(:home) %></a></li>
            <li><%= link_to "Availabiliy" , "availability.html" %></li>
            <!--li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Availabiliy <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Romantic 1 beeroom flat</a></li>
                <li><a href="#">Modern 2 bedrooms flat</a></li>               
                <li role="separator" class="divider"></li>
                <li><a href="#">Testimonials</a></li>
              </ul>
            </li-->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Info <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "How to get there?" , "getthere.html" %></li>
                <li><%= link_to "What to do in Tours?" , "whattodo.html" %></li>              
              </ul>
            </li>
            <li><%= link_to "Contact" , "contact.html" %></li>
          
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t(:lan) %>  <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="<%= current_page.url.gsub("en", "fr") %>">FR</a></li>
                <li><a href="<%= current_page.url.gsub("fr", "en") %>">EN</a></li>             
              </ul>
            </li>

          </ul>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>
  </body>
</html>
